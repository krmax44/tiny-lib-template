{
  "name": "<%= name %>",
  "version": "1.0.0",
  "description": "<%= description %>",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "repository": "github:<%= username %>/<%= name %>",
  "author": "<%= username %><<%= email %>>",
  "license": "MIT",
  "scripts": {
    "test": "ava && xo",
    "lint": "xo",
    "build": "tsc -p ./tsconfig.json && uglifyjs build/index.js -o build/index.js",
    "dev": "tsc -p ./tsconfig.json -w"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "ava": "^2.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-config-xo-typescript": "^0.19.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.3",
    "np": "^5.0.3",
    "prettier": "^1.18.2",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3",
    "uglify-es": "^3.3.9",
    "xo": "^0.25.3"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "files": [
      "**/*.test.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "xo": {
    "extends": [
      "xo-typescript",
      "plugin:prettier/recommended"
    ],
    "extensions": [
      "ts"
    ],
    "rules": {
      "ava/no-ignored-test-files": [
        "error",
        {
          "files": [
            "**/*.test.ts"
          ]
        }
      ]
    },
    "prettier": true
  },
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": true,
    "useTabs": true
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn test"
    }
  }
}